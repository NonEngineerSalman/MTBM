<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="208.0" prefWidth="548.0" spacing="0" style="-fx-background-radius: 12;              -fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b);              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0.4, 0, 4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Movie Poster -->
    <ImageView fx:id="poster" fitHeight="208.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0.5, 0, 2); -fx-background-radius: 12;">
        <image>
            <Image url="@Shang-Chi_and_the_Legend_of_the_Ten_Rings_poster.jpeg" />
        </image>
    </ImageView>

    <!-- Ticket Info Area -->
    <AnchorPane prefHeight="208.0" prefWidth="578.0" style="-fx-background-color: linear-gradient(to bottom, #fff7f0cc, #f9e1d3cc);                        -fx-border-style: dotted;                        -fx-border-width: 0 4 0 0;                        -fx-border-color: rgba(254, 180, 123, 0.7);                        -fx-background-radius: 0 12 12 0;">
        <children>
            <VBox layoutX="14" layoutY="14" spacing="6">
                <Label fx:id="title" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ff7e5f;" text="Shang-Chi, 2D" />

                <HBox spacing="24">
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="DATE:" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #663c2f;" text="03.11.2023" />
                    </VBox>
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="TIME:" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #663c2f;" text="3:30pm" />
                    </VBox>
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="PRICE:" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #ff7e5f; -fx-font-weight: bold;" text="Rs. 480" />
                    </VBox>
                </HBox>

                <HBox spacing="24">
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="HALL" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #feb47b;" text="Blue" />
                    </VBox>
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="ROW" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #663c2f;" text="D" />
                    </VBox>
                    <VBox spacing="4">
                        <Label style="-fx-font-size: 11px; -fx-text-fill: #bb6f56;" text="SEATS" />
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #663c2f;" text="12,13" />
                    </VBox>
                </HBox>

                <Label style="-fx-font-size: 13px; -fx-text-fill: #a85a3e;" text="ADULTS 2" />
                <Label style="-fx-font-size: 11px; -fx-text-fill: #8c5741;" text="PVR Cinema,\nCivil Lines,\nNew Delhi" />
            </VBox>
        </children>
    </AnchorPane>

    <StackPane prefHeight="150.0" prefWidth="200.0">
        <children>
            <ImageView fitHeight="207.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@9185914.png" />
                </image>
            </ImageView>
        </children>
    </StackPane>

</HBox>
